<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".presentation.ui.onboarding.OnBoardingFragment">


    <androidx.viewpager2.widget.ViewPager2
        android:background="@color/colorPrimary"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.google.android.material.tabs.TabLayout
        android:backgroundTint="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:tabBackground="@drawable/tab_indicator"
        app:tabGravity="center"
        android:background="@android:color/white"
        app:tabIndicatorHeight="0dp"
        app:tabPaddingEnd="@dimen/_10sdp"
        app:tabPaddingStart="@dimen/_10sdp"
        android:id="@+id/tablayout"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        style="@style/CustomButtonStyle"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:contentDescription="@string/onboarding_viewpager"
        android:text="@string/next"/>

    <com.sparkmembership.sparkowner.presentation.components.TextView
        android:id="@+id/signIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/already_know_so_sign_in"
        style="@style/textView_medium_secondary"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        />


</LinearLayout>