<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".presentation.ui.invoice.InvoiceDetail.InvoiceDetailFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="4dp"
        android:id="@+id/firstLayout"
        android:backgroundTint="@android:color/white"
        android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
    android:layout_gravity="center">

    <com.sparkmembership.sparkowner.presentation.components.TextView
        android:id="@+id/tv_invoice_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anas Anwer"
        android:layout_gravity="center"
        style="@style/TextView_medium_primary"
        />

    <com.sparkmembership.sparkowner.presentation.components.TextView
        android:id="@+id/tv_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Super Star Martial Arts"
        style="@style/textView_medium_secondary"
        android:layout_marginBottom="@dimen/_5sdp"
        />
        <com.sparkmembership.sparkowner.presentation.components.TextView
            android:id="@+id/invoiceDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invoice_date"
            android:textStyle="bold"
            style="@style/textView_medium_secondary"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.sparkmembership.sparkowner.presentation.components.TextView
            android:id="@+id/invoiceDate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="August 22, 2024 06:45 AM"
            style="@style/TextView_medium_primary"
            />

        <com.sparkmembership.sparkowner.presentation.components.TextView
            android:id="@+id/paymentStatus"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_20sdp"
            android:text="@string/paid"
            style="@style/TextView_Regular_primary"
            android:gravity="center"
            android:background="@drawable/rounded_background"
            android:padding="@dimen/_5sdp"
            android:textAllCaps="true"
            android:textColor="@color/green"
            android:textSize="@dimen/_7sdp" />
    </LinearLayout>
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/colorSecondary" />
    <LinearLayout
        android:id="@+id/action_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_12sdp"
        android:gravity="center_vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/btn_share"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_share"
                />

            <com.sparkmembership.sparkowner.presentation.components.TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Share"
                android:layout_marginTop="@dimen/_4sdp"
                style="@style/textView_medium_secondary"
                android:textSize="@dimen/_10sdp"
                />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorSecondary"
            android:layout_marginHorizontal="@dimen/_5sdp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/btn_print"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_print"
                />

            <com.sparkmembership.sparkowner.presentation.components.TextView
                android:id="@+id/tv_print"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Print"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="center_horizontal"
                style="@style/textView_medium_secondary"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorSecondary"
            android:layout_marginHorizontal="@dimen/_5sdp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/btn_open"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/invoice_icon"
                />

            <com.sparkmembership.sparkowner.presentation.components.TextView
                android:id="@+id/tv_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="center_horizontal"
                style="@style/textView_medium_secondary"
                android:textSize="@dimen/_10sdp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        android:elevation="4dp"
        android:layout_below="@+id/firstLayout"
        android:backgroundTint="@android:color/white"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/firstLayout">

            <com.sparkmembership.sparkowner.presentation.components.TextView
                android:id="@+id/tv_invoice_items_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invoice_items"
                style="@style/TextView_medium_primary"
                android:paddingStart="@dimen/_12sdp"
                android:padding="@dimen/_6sdp"
                />

            <LinearLayout
                android:id="@+id/item_row_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background= "@color/colorSecondary"
                android:padding="@dimen/_5sdp"
                >

                <com.sparkmembership.sparkowner.presentation.components.TextView
                    android:id="@+id/items"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="@string/items"
                    style="@style/TextView_medium_primary"

                    />

                <com.sparkmembership.sparkowner.presentation.components.TextView
                    android:id="@+id/tv_item_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/qty"
                    android:layout_weight="1"
                    style="@style/TextView_medium_primary"
                    />

                <com.sparkmembership.sparkowner.presentation.components.TextView
                    android:id="@+id/tv_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/price"
                    style="@style/TextView_medium_primary"
                    />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_invoice_items"
                />

            <LinearLayout
                android:id="@+id/totals_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_12sdp"
                android:paddingStart="@dimen/_12sdp"
                android:padding="@dimen/_6sdp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="SubTotal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="$9.00" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Tax" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="$1.00" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Discount" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="-$1.00" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Total Purchased"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="$9.00"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>