<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".presentation.ui.notes.Allnotes.AllNotesFilterBottomSheetFragment"
    android:background="@color/colorSecondary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    <com.sparkmembership.sparkowner.presentation.components.TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/filter_by"
        android:textSize="@dimen/_15sdp"
        style="@style/TextView_medium_primary"
        android:gravity="center_vertical"/>


    <ImageView
        android:id="@+id/btnCancel"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/ic_cancel_icon" />

    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
        >

        <com.sparkmembership.sparkowner.presentation.components.TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Show SMS Notes"
            style="@style/textView_regular_secondary"/>

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch_sms_notes"
            app:track="@drawable/switch_track"
            android:thumb="@drawable/switch_thumb"
            app:trackTint="@null"
            app:thumbTint="@null"
            />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <com.sparkmembership.sparkowner.presentation.components.TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Show All Connected Notes"
        style="@style/textView_regular_secondary"/>

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_connected_notes"
        app:track="@drawable/switch_track"
        android:thumb="@drawable/switch_thumb"
        app:trackTint="@null"
        app:thumbTint="@null"
        />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
   >

    <com.sparkmembership.sparkowner.presentation.components.TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Completed Order Notes"
        style="@style/textView_regular_secondary"/>

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_order_notes"
        app:track="@drawable/switch_track"
        android:thumb="@drawable/switch_thumb"
        app:trackTint="@null"
        app:thumbTint="@null"
        />

</LinearLayout>

    <com.sparkmembership.sparkowner.presentation.components.CustomButton
        android:id="@+id/apply_filter_button"
        style="@style/logoutButtonstyle"
        android:layout_width="match_parent"
        android:textAllCaps="false"
        android:layout_height="@dimen/_30sdp"
        android:text="@string/apply_filter"/>

</LinearLayout>
