<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:padding="@dimen/_4sdp">

    <com.sparkmembership.sparkowner.presentation.components.TextView
        android:id="@+id/txtName"
        style="@style/textView_medium_secondary_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:text="@string/entered" />

    <com.sparkmembership.sparkowner.presentation.components.TextView
        android:id="@+id/txtValue"
        style="@style/TextView_Regular_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/august_3_2024" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@color/colorAppTextSecondary" />

</LinearLayout>