<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/_10sdp"
    android:paddingEnd="@dimen/_10sdp"
    android:paddingTop="@dimen/_5sdp"
    android:paddingBottom="@dimen/_5sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:background="@drawable/card_background"
    android:id="@+id/itemCard"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.sparkmembership.sparkowner.presentation.components.TextView
            android:id="@+id/staffName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ron Sell"
            style="@style/TextView_medium_primary"
            android:layout_weight="1"
            />
        <com.sparkmembership.sparkowner.presentation.components.TextView
            android:id="@+id/notesFor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextView_Regular_primary"
            android:text="@string/notes_for_aqib_murtaza2"
            android:textColor="@color/light_blue"
            android:textStyle="bold"
            android:textSize="@dimen/_9sdp"
            />

    </LinearLayout>
    <com.sparkmembership.sparkowner.presentation.components.TextView
        android:id="@+id/date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="August 21, 2024 04:02 AM"
        style="@style/TextView_Regular_primary"
        android:textSize="@dimen/_9sdp"
        android:textColor="@color/light_gray"

        />
    <com.sparkmembership.sparkowner.presentation.components.TextView
        android:id="@+id/noteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Sent SMS From Sparktan App: Perfect! Thank you for sending a suggestion as that helps. I will call you at 1:40pm then."
        style="@style/TextView_Regular_primary"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/light_gray" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        >

    <com.sparkmembership.sparkowner.presentation.components.TextView
        android:id="@+id/follow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextView_Regular_primary"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/darker_gray"
        />

        <com.sparkmembership.sparkowner.presentation.components.CustomButton
            android:id="@+id/delete_button"
            style="@style/cancelButtonstyle"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_20sdp"
            android:textSize="@dimen/_8sdp"
            android:text="@string/delete"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_5sdp"
            />
    </RelativeLayout>

</LinearLayout>
