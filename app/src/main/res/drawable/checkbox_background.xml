<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_red"/>  <!-- Light red background when selected -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhiteBlack"/>  <!-- White background when unselected -->
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="@color/colorSecondary"/> <!-- Gray border -->
        </shape>
    </item>
</selector>
